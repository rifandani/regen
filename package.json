{
  "name": "@rifandani/regen",
  "version": "1.0.0",
  "description": "A Command Line Interface (CLI) for React to generate components, hooks, view model template, etc.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rifandani/regen.git"
  },
  "bugs": {
    "url": "https://github.com/rifandani/regen/issues"
  },
  "homepage": "https://github.com/rifandani/regen#readme",
  "author": "Rifandani",
  "license": "MIT",
  "bin": {
    "regen": "./dist/regen.js"
  },
  "source": "src/index.ts",
  "exports": {
    "require": "./dist/regen.js",
    "default": "./dist/regen.modern.js"
  },
  "main": "./dist/regen.js",
  "module": "./dist/regen.module.js",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "cli",
    "react"
  ],
  "engines": {
    "node": ">=16.x",
    "npm": ">=8.x"
  },
  "browserslist": [
    "maintained node versions"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint .",
    "build": "microbundle build --target node",
    "watch": "microbundle watch --target node --external path,module"
  },
  "dependencies": {
    "cfonts": "^3.1.1",
    "chalk": "^4.1.2",
    "commander": "9.4.1",
    "deep-keys": "0.5.0",
    "dotenv": "^16.0.3",
    "execa": "^6.1.0",
    "fs-extra": "11.1.0",
    "inquirer": "^8.2.3",
    "lodash": "4.17.21",
    "openai": "^3.1.0",
    "ora": "^5.4.1",
    "replace": "1.2.2",
    "type-fest": "^3.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-conventional": "17.3.0",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/git": "10.0.1",
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^9.0.3",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "8.30.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.2",
    "microbundle": "^0.15.1",
    "prettier": "2.8.1",
    "pretty-quick": "3.1.3",
    "semantic-release": "19.0.5",
    "typescript": "^4.9.4"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 120,
    "endOfLine": "auto"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "airbnb-typescript",
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "commonjs": false,
      "node": true
    },
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "root": true,
    "parser": "@typescript-eslint/parser",
    "rules": {
      "no-console": "off"
    }
  }
}
